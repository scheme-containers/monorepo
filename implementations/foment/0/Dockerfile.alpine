# -*- mode: dockerfile; coding: utf-8 -*-
FROM alpine AS build
RUN apk add git gcc make g++ coreutils clang-dev llvm-dev lld-dev
RUN apk add --repository=https://dl-cdn.alpinelinux.org/alpine/v3.16/main/ libexecinfo-dev
WORKDIR /build
RUN git clone https://github.com/leftmike/foment.git --depth=1
WORKDIR /build/foment/unix
RUN make CC=clang CXX=clang++ LD=lld

FROM alpine
COPY --from=build /build/foment/unix/release/foment /usr/local/bin/
RUN ln -s foment /usr/local/bin/scheme-banner
CMD ["scheme-banner"]
